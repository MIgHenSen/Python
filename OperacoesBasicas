while True: #Estrutura de repetição while
    print("----- MENU -----") #menu de opções para o usuário
    print("1. Adição")
    print("2. Subtração")
    print("3. MUltiplicação")
    print("4. Divisão")
    print("5. Sair")
    try: #Try, para verificar erros nos códigos abaixo
        option = int(input("Qual a sua escolha: ")) #Variavel que recebe opção escolhida pelo usuário
        
        #Estrutura if else, para se o usuário quiser finalizar o programa
        if option == 5:
            print("Saindo...")
            break

        #Estrutura while, para repetir enquanto option for dierente de 5
        while option != 5:
            n1 = int(input("Digite o primeiro numero: ")) #Variavel que recebe primeiro numero
            n2 = int(input("Digite o segundo numero: ")) #Variavel que recebe segundo numero
        
            #Estrutura if else. para exibir o resultado da operação escolhida pelo usuário
            if option == 1:
                print(f"{n1} + {n2} = {n1 + n2}")
                print("")
                break
            elif option == 2:
                print(f"{n1} - {n2} = {n1 - n2}")
                print("")
                break
            elif option == 3:
                print(f"{n1} * {n2} = {n1 * n2}")
                print("")
                break
            elif option == 4:
                print(f"{n1} / {n2} = {n1 / n2}")
                print("")
                break
            else:
                print("Opção Inválida!!!")
    except ValueError: #Erro "Value", de valor, quando usuário digitar aquilo que não deveria
        print("Digite apenas valores válidos!!!")
    except ZeroDivisionError: #Erro "Divisão por zero", quando usuário tentar dividir por zero
        print("Não existem divisões por zero!!!")
