while True: #Estrutura de repetição while
    try: #Try, para verificar erros nos códigos abaixo
        print("Para saber o maior valor entre três números...") #Pequeno texto sobre a função do software
        n1 = int(input("Digite o primeiro valor: ")) #Variável que recebe primeiro valor
        n2 = int(input("Digite o segundo valor: ")) #Variável que recebe segundo valor
        n3 = int(input("Digite o terceiro valor: ")) #Variável que recebe terceiro valor
        #Função max define maior valor no intervalo
        print("O maior valor é: ", max(n1, n2, n3)) #Exibe maior valor
        #Função min define menor valor no intervalo
        print("O menor valor é: ", min(n1, n2, n3)) #Exibe menor valor
        print("")
    except ValueError: #Erro "Value", de valor, quando usuário digitar aquilo que não deveria
        print("Digite apenas valores válidos!!!")
        print("")
