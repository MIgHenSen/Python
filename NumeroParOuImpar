while True: #Estrutura de repetição while
    try: #Try, para verificar erros nos códigos abaixo
        print("Para saber se um número é ímpar ou par...") #Pequeno texto sobre a função do software
        number = int(input("Digite um número: ")) #Variavel que recebe um numero
        #Estrutura que verifica resto da divisão de number por dois e define numeros pares ou impares
        if number % 2 == 0:
            print("É um número par")
            print("")
        else:
            print("É um número ímpar")
            print("")
    except ValueError: #Erro "Value", de valor, quando usuário digitar aquilo que não deveria
        print("Números decimais não são classificados em pares ou ímpares")
        print("Digite apenas valores válidos!!!")
        print("")
