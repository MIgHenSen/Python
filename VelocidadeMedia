while True: #Estrutura de repetição while
    try: #Try, para verificar erros nos códigos abaixo
        print("Para calcular a velocidade média de um automõvel...") #Pequeno texto sobre a função do software
        print("Deseja o resultado em km/h ou em m/s?") #Pergunta para o usuário sobre a unidade de medida que será usada
        print("Digite 1 (km/h) ou 2 (m/s)")
        unidade = int(input("Em que unidades quer seu resultado: ")) #Input que define unidade de medida
        #Estrutura if else, que define valores baseada em "unidade"
        if unidade == 1:
            km = float(input("Digite o valor da distância percorrida: ")) #Variavel que recebe valor digitado pelo usuario
            h = float(input("Digite quanto tempo durou o percurso: ")) #Variavel que recebe valor digitado pelo usuario
            speed = km / h #Variavel que define valor da velocidade
            print("A velocidade desse automóvel foi, em média: ", round(speed, 2), "km/h") #Exibe valores ao usuário na unidade km/h
            #Estrutura if else que diz ao usuário se ele foi multado ou não
            if speed > 360.0:
                print("Você foi multado por alta velocidade!")
            print("")
        elif unidade == 2:
            m = float(input("Digite o valor da distância percorrida: ")) #Variavel que recebe valor digitado pelo usuario
            s = float(input("Digite quanto tempo durou o percurso: ")) #Variavel que recebe valor digitado pelo usuario
            speed = m / s #Variavel que define valor da velocidade
            print("A velocidade desse automóvel foi, em média: ", round(speed, 2), "m/s") #Exibe valores ao usuário na unidade m/s
            #Estrutura if else que diz ao usuário se ele foi multado ou não
            if speed > 100.0:
                print("Você foi multado por alta velocidade!")
            print("")
        else:
            print("Opção Inválida!")
    except ValueError: #Erro "Value", de valor, quando usuário digitar aquilo que não deveria
        print("Digite apenas valores válidos!!!")
